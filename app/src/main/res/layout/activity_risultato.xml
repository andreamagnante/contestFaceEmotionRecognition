<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RisultatoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:id="@+id/foto1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:src="@drawable/foto1" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/foto2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="right"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:src="@drawable/foto1" />
            <TextView
                android:id="@+id/hashtag"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="#HASHTAG"
                android:layout_marginTop="170dp"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="210dp">

        <Button
            android:id="@+id/scopriTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Che tipo sono?"
            />

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            android:background="#DADADA">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INFO"
                    android:layout_marginBottom="15dp"
                    android:textSize="30dp"
                    />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GENDER: 100"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@android:style/TextAppearance"
                    android:drawableRight="@drawable/genders"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AGE: 100"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@android:style/TextAppearance"
                    android:drawableRight="@drawable/calendar"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/emotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EMOTION"
                    android:layout_marginBottom="15dp"
                    android:textSize="30dp"
                    />

                <TextView
                    android:id="@+id/anger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ANGER: 100"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@android:style/TextAppearance"
                    android:drawableRight="@drawable/angry"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/contempt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONTEMPT: 100"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@android:style/TextAppearance"
                    android:drawableRight="@drawable/quiet"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/disgust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DISGUST: 100"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@android:style/TextAppearance"
                    android:drawableRight="@drawable/ill"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/fear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FEAR: 100"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@android:style/TextAppearance"
                    android:drawableRight="@drawable/secret"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/happiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HAPPINESS: 100"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@android:style/TextAppearance"
                    android:drawableRight="@drawable/happy"
                    android:textSize="20dp"/>


                <TextView
                    android:id="@+id/neutral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NEUTRAL: 100"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@android:style/TextAppearance"
                    android:drawableRight="@drawable/neutral"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/sadness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SADNESS: 100"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@android:style/TextAppearance"
                    android:drawableRight="@drawable/sad"
                    android:textSize="20dp"/>


                <TextView
                    android:id="@+id/surprise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SURPRISE: 100"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@android:style/TextAppearance"
                    android:drawableRight="@drawable/surprised"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/finalrequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Looking at facial expression, seems to be"
                    android:layout_marginBottom="15dp"
                    android:textSize="30dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/risultato1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SURPRISE: 100"
                        android:layout_marginBottom="25dp"
                        android:textAppearance="@android:style/TextAppearance"
                        android:textSize="60dp"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>